{
  "name": "@owja/ioc",
  "version": "2.0.0-alpha.1",
  "description": "dependency injection for javascript",
  "main": "dist/ioc.js",
  "module": "dist/ioc.module.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "deno": "./src/index.ts",
      "browser": "./dist/ioc.module.js",
      "require": "./dist/ioc.js",
      "import": "./dist/ioc.mjs",
      "default": "./dist/ioc.module.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "keywords": [
    "typescript",
    "dependency injection",
    "dependency inversion",
    "inversion of control",
    "ioc",
    "di"
  ],
  "scripts": {
    "prepack": "npm run build",
    "prebuild": "npm run clean",
    "build": "microbundle --format es,cjs",
    "postbuild": "shx cp dist/ioc.module.js dist/ioc.mjs",
    "clean": "shx rm -rf dist && shx rm -f owja-ioc-*.tgz && shx rm -rf coverage",
    "test": "jest",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --ext .ts ./src --fix",
    "prettier": "prettier src/**/*.ts --check",
    "prettier:fix": "prettier src/**/*.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owja/ioc.git"
  },
  "bugs": {
    "url": "https://github.com/owja/ioc/issues"
  },
  "homepage": "https://github.com/owja/ioc",
  "author": "Hauke Broer <info@owja.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "microbundle": "^0.15.0",
    "prettier": "2.6.2",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "mangle": {
    "regex": "^_"
  },
  "files": [
    "/dist",
    "!/dist/example",
    "/src"
  ],
  "browserslist": [
    "since 2018-11 and >0%",
    "node >= 12"
  ]
}
